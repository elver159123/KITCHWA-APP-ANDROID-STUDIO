<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#0000FF" android:centerColor="#8A2BE2" android:endColor="#FF1493" android:type="linear"/>
        </shape>
    </item>
    <item android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="315"
                android:startColor="#32CD32" android:endColor="#8A2BE2" android:type="linear"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
</layer-list>
