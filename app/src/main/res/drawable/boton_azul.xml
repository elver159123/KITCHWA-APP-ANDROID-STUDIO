<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado normal del botón -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#bf40c6"
                android:endColor="#0D47A1" />
            <corners android:radius="12dp" />
            <padding android:left="16dp" android:right="16dp" android:top="10dp" android:bottom="10dp" />
            <solid android:color="#bf40c6" />
            <stroke android:width="2dp" android:color="#1565C0" />
        </shape>
    </item>

    <!-- Estado cuando el botón está presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#0D47A1"
                android:endColor="#2196F3" />
            <corners android:radius="12dp" />
            <padding android:left="16dp" android:right="16dp" android:top="10dp" android:bottom="10dp" />
            <solid android:color="#0D47A1" />
            <stroke android:width="2dp" android:color="#0D47A1" />
        </shape>
    </item>

</selector>

