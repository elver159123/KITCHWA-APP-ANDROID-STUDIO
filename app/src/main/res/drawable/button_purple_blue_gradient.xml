<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#db7fef"
                android:endColor="#84b2f4"
                android:type="linear"/>
            <corners android:radius="24dp"/>
            <stroke android:width="1dp" android:color="#512DA8"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#db7fef"
                android:endColor="#84b2f4"
                android:type="linear"/>
            <corners android:radius="24dp"/>
            <stroke android:width="1dp" android:color="#7B1FA2"/>
        </shape>
    </item>
</selector>